<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.emails() %>">emails</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Index of email</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New email', pathTo.new_email(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (emails.length > 0) { %>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
		    <th>Name</th>
		    <th>Email</th>
		    <th>Web</th>
		    <th>Status</th>
		    <th>Valid</th>
		    <th>Division</th>
		    <th>Sent</th>
		    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% emails.forEach(function (email) { %>
                <tr>
                    <td><strong><%- link_to(email.id, pathTo.email(email)) %></strong></td>
		    <td><%- email.name %></td>
                    <td><%- email.email %></td>
		    <td><%- link_to(email.web, 'http://'+email.web) %></td>
		    <td><%- email.status_id %></td>
		    <td><%- email.is_valid %></td>
		    <td><%- email.division %></td>
		    <td><%- email.is_sent %></td>
		    <td><%- email.category_id %></td>

		    <td>
                        <%- link_to('<i class="icon-edit"></i> Edit', pathTo.edit_email(email), {class: 'btn btn-mini'}) %>
                        <%- link_to('<i class="icon-remove icon-white"></i> Delete', pathTo.email(email), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No emails were found.</strong>
        </p>
        <% } %>
    </div>
</div>

<%- paginate(emails) %>
